@model CumulatievePart1.Models.Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5 mb-5">
        <h2>Create New Student</h2>
        
        <form method="POST" action="/StudentPage/Create">
            <div class="inputrow">
                <label for="StudentFname">First Name:</label>
                <input type="text" id="StudentFname" name="StudentFname" value="@Model?.StudentFName" />
            </div>
            <div class="inputrow">
                <label for="StudentLname">Last Name:</label>
                <input type="text" id="StudentLname" name="StudentLname" value="@Model?.StudentLName" />
            </div>
            <div class="inputrow">
                <label for="StudentNumber">Student Number:</label>
                <input type="number" id="StudentNumber" name="StudentNumber" value="@Model?.StudentNumber" />
            </div>
                <div class="inputrow">
                <label for="EnrolDate">Enrol Date:</label>
                <input type="number" id="EnrolDate" name="EnrolDate" value="@Model?.EnrolDate" />
            </div>
            <div class="inputrow">
                <input type="submit" value="Create Student" />
            </div>
        </form>
    </div>
</body>
</html>
