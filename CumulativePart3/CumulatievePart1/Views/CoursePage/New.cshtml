@model CumulatievePart1.Models.Course

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5 mb-5">
        <h2>Create New Course</h2>
        <form method="POST" action="/CoursePage/Create">
            
            <div class="inputrow">
                <label for="CourseCode">Course Code:</label>
                <input type="text" id="CourseCode" name="CourseCode" value="@Model?.CourseCode" />
            </div>
            <div class="inputrow">
                <label for="CourseName">Course Name:</label>
                <input type="number" id="CourseName" name="CourseName" value="@Model?.CourseName" />
            </div>
                <div class="inputrow">
                <label for="StartDate">Start Date:</label>
                <input type="number" id="StartDate" name="StartDate" value="@Model?.StartDate" />
            </div>
                <div class="inputrow">
                <label for="FinishDate">Finish Date:</label>
                <input type="number" id="FinishDate" name="FinishDate" value="@Model?.FinishDate" />
            </div>
                <div class="inputrow">
                <label for="TeacherId">Teacher id:</label>
                <input type="number" id="TeacherId" name="TeacherId" value="@Model?.TeacherId" />
            </div>
            <div class="inputrow">
                <input type="submit" value="Create Course" />
            </div>
        </form>
    </div>
</body>
</html>
