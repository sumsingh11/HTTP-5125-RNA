<body>
    <div class="container">
        <h2>Create New Teacher</h2>
        <form method="POST" action="/TeacherPage/Create">
            <!-- First Name -->
            <div class="form-group">
                <label for="TeacherFname">First Name:</label>
                <input type="text" id="TeacherFname" name="TeacherFname" 
                       value="@Model?.TeacherFName" placeholder="Enter first name" required>
            </div>

            <!-- Last Name -->
            <div class="form-group">
                <label for="TeacherLname">Last Name:</label>
                <input type="text" id="TeacherLname" name="TeacherLName" 
                       value="@Model?.TeacherLName" placeholder="Enter last name" required>
            </div>

            <!-- Salary -->
            <div class="form-group">
                <label for="TeacherSalary">Salary:</label>
                <input type="number" id="TeacherSalary" name="TeacherSalary" 
                       value="@Model?.TeacherSalary" placeholder="Enter salary" required>
            </div>

            <!-- Hiring Date -->
            <div class="form-group">
                <label for="HiringDate">Hiring Date:</label>
                <input type="date" id="HiringDate" name="HiringDate" 
                       value="@Model?.TeacherHireDate.ToString("yyyy-MM-dd")" required>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create Teacher">
            </div>
        </form>
    </div>
